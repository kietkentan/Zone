<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white_15dp"
    android:orientation="vertical"
    android:padding="@dimen/dp20">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp8"
        android:textSize="@dimen/sp17"
        android:textColor="@color/blue_90"
        android:text="@string/logged_in_another_device"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="@dimen/sp12"
        android:textColor="@color/blue_120"
        android:text="@string/login_again"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp80"
        android:id="@+id/txt_log_out"
        android:textSize="@dimen/sp12"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp10"
        android:layout_gravity="end"
        android:textColor="@color/green_220"
        android:padding="@dimen/dp8"
        android:text="@string/logout"/>
</LinearLayout>