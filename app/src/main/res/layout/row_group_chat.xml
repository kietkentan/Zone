<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="groupChat"
            type="com.khtn.zone.database.data.GroupWithMessages" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/view_root"
        android:background="@drawable/bg_item_row_chat_ripple_8dp"
        android:paddingTop="@dimen/dp10"
        android:paddingHorizontal="@dimen/dp15"
        tools:ignore="ContentDescription">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:src="@drawable/ic_other_user"
                    app:imageUrl="@{groupChat.group.image}" />

                <TextView
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:textSize="@dimen/sp20"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_circle_non_user_image"
                    android:visibility="@{(groupChat.group.image == null || groupChat.group.image.isEmpty) ? View.VISIBLE : View.GONE}"
                    android:text="@{groupChat.group.id}" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="1"
                    android:text="@{groupChat.group.id}"
                    android:textColor="@color/blue_90"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintEnd_toStartOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    groupLastMessage="@{groupChat}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/blue_120"
                    android:layout_marginEnd="@dimen/dp20"
                    android:textSize="@dimen/sp10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView3"
                    setGroupMessageSendTime="@{groupChat.messages}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/color_time"
                    android:textSize="@dimen/sp8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    setGroupUnReadCount="@{groupChat.group.unRead}"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:background="@drawable/shape_circle_blue"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp58"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/grey_160" />
    </LinearLayout>
</layout>