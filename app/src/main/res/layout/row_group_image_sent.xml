<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />

        <variable
            name="message"
            type="com.khtn.zone.database.data.GroupMessage" />
    </data>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="@dimen/dp2"
        android:paddingEnd="@dimen/dp5"
        android:orientation="vertical"
        tools:ignore="DisableBaselineAlignment,RtlSymmetry">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardCornerRadius="@dimen/dp8">

            <ImageView
                android:id="@+id/image_msg"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                loadGroupMsgImage="@{message}"
                tools:ignore="ContentDescription" />

            <ProgressBar
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_gravity="center"
                android:visibility="@{message.status[0] == 0 ? View.VISIBLE : View.GONE}" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_msg_status"
            groupMessageStatus="@{message}"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp13"
            android:layout_gravity="end"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp2"
            android:textSize="@dimen/sp8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
</layout>