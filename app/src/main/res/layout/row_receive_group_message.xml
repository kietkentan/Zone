<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="message"
            type="com.khtn.zone.database.data.GroupMessage" />

        <variable
            name="chatUsers"
            type="com.khtn.zone.database.data.ChatUser[]" />
    </data>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:weightSum="5"
        tools:ignore="DisableBaselineAlignment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/dp2"
            android:paddingStart="@dimen/dp5"
            tools:ignore="RtlSymmetry,UselessParent">

            <LinearLayout
                android:id="@+id/layout_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/bg_item_chat_receive_2_ripple_8dp"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp12"
                android:paddingVertical="@dimen/dp2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/txt_msg_status"
                tools:ignore="ContentDescription">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            chatUsers="@{chatUsers}"
                            message="@{message}"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            showUserIdIfNotLocalSaved="@{chatUsers}"
                            currentMessage="@{message}"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingTop="@dimen/dp3"
                        android:text="@{message.textMessage.text}"
                        android:textColor="#1B1A57"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_msg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/dp2"
                    android:textColor="#1B1A57"
                    android:visibility="gone"
                    android:textSize="@dimen/sp8"
                    showGrpMsgTime="@{message}" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_msg_status"
                groupMessageStatus="@{message}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp13"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:paddingTop="@dimen/dp2"
                android:visibility="gone"
                android:textSize="@dimen/sp8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/layout_msg"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>