<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="user"
            type="com.khtn.zone.database.data.ChatUser" />

        <variable
            name="viewmodel"
            type="com.khtn.zone.viewmodel.CreateGroupChatViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp5"
        android:weightSum="8"
        android:onClick="@{clickListener}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/dp100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1:1">

                <ImageView
                    android:id="@+id/iv_contact_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    imageUrl="@{user.user.image}"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                style="@style/TextDefaultName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shape_circle_non_user_image"
                android:visibility="@{(user.user.image == null || user.user.image.isEmpty) ? View.VISIBLE : View.GONE}"
                android:text="@{user.user.userName}" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{user.localName}"
                style="@style/TextNameInMessage"
                android:paddingHorizontal="@dimen/dp10"/>

            <CheckBox
                android:id="@+id/cb_contact_create_group"
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:onCheckedChanged="@{(checkBox, checked) -> viewmodel.checkedChange(checked, user)}"/>
        </LinearLayout>
    </LinearLayout>
</layout>