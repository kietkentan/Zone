<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.khtn.zone.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_verifyFragment"
            app:destination="@id/verifyFragment" />
        <action
            android:id="@+id/action_loginFragment_to_setupProfileFragment"
            app:destination="@id/setupProfileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_singleChatHomeFragment"
            app:destination="@id/singleChatHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyFragment"
        android:name="com.khtn.zone.fragment.VerifyFragment"
        android:label="VerifyFragment" >
        <action
            android:id="@+id/action_verifyFragment_to_setupProfileFragment"
            app:destination="@id/setupProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/setupProfileFragment"
        android:name="com.khtn.zone.fragment.SetupProfileFragment"
        android:label="SetupProfileFragment" >
        <action
            android:id="@+id/action_setupProfileFragment_to_singleChatHomeFragment"
            app:destination="@id/singleChatHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/singleChatHomeFragment"
        android:name="com.khtn.zone.fragment.SingleChatHomeFragment"
        android:label="fragment_single_chat_home"
        tools:layout="@layout/fragment_single_chat_home" >
        <action
            android:id="@+id/action_singleChatHomeFragment_to_singleChatFragment"
            app:destination="@id/singleChatFragment" />
    </fragment>
    <fragment
        android:id="@+id/singleChatFragment"
        android:name="com.khtn.zone.fragment.SingleChatFragment"
        android:label="fragment_single_chat"
        tools:layout="@layout/fragment_single_chat" >
        <argument
            android:name="chatUserProfile"
            app:argType="com.khtn.zone.database.data.ChatUser"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.khtn.zone.fragment.ContactFragment"
        android:label="fragment_contact"
        tools:layout="@layout/fragment_contact" >
        <action
            android:id="@+id/action_contactFragment_to_singleChatFragment"
            app:destination="@id/singleChatFragment" />
    </fragment>
</navigation>