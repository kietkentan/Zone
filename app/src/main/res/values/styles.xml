    <style name="TextBlackSemi12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="ToolbarSubTitle">
        <item name="android:textSize">@dimen/sp8</item>
    </style>

    <style name="TextBlackSemi8">
        <item name="android:textSize">@dimen/sp8</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextGreenSemiItalic12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/green_220</item>
        <item name="android:textStyle">italic</item>
