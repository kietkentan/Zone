<resources>
    <style name="Theme.Zone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="TextError">
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textColor">@color/red_255</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextOTP">
        <item name="android:background">@drawable/bg_input_otp</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="TextBlackBoldImageResourceSheet">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextBlue90Semi10">
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/blue_90</item>
    </style>

    <style name="TextBlue90Semi12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/blue_90</item>
    </style>

    <style name="TextBlue90Semi15">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/blue_90</item>
    </style>

    <style name="TextBlackSemi15">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBlackSemi12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextGreenSemiItalic12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/green_220</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextWhiteSemi12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBlackRg10">
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:fontFamily">@font/font_rg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTimeRowChat">
        <item name="android:textSize">@dimen/sp8</item>
        <item name="android:textColor">@color/color_time</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextUnreadCount">
        <item name="android:textSize">@dimen/sp6</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextMessageReview">
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:textColor">@color/blue_120</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextNameInMessage">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/blue_90</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextDefaultName">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>