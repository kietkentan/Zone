<resources>
    <style name="Theme.Zone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="ShapeImageStyle_Avatar">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="BackGround">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LinearLayoutCornerTopDp28">

    </style>

    <style name="Theme_Dialog_Small" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

    <style name="AppName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp27</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="TextError">
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textColor">@color/red_255</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextOTP">
        <item name="android:background">@drawable/bg_input_otp</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="TextBlackBoldImageResourceSheet">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextBlue90Semi10">
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/blue_90</item>
    </style>

    <style name="TextBlue90Semi12">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/blue_90</item>
    </style>

    <style name="TextBlue90Semi15">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/blue_90</item>
    </style>

    <style name="TextBlackSemi15">
        <item name="android:textSize">@dimen/sp15</item>
