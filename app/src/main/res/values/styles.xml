    <style name="TextNameInMessage">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/blue_90</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextDefaultName">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>